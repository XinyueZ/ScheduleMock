<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThisAppTheme">
        <!-- Customize your theme here. -->
    </style>

	<style name="Home_Menu_Style">
		<item name="android:layout_width">@dimen/home_menu_width</item>
		<item name="android:layout_height">@dimen/home_menu_height</item>
	</style>

	<style name="No_Title_Dialog_Style" parent="android:Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="ThisActionBar_Style" parent="@style/Widget.AppCompat.Base.ActionBar">

		<!-- <item name="android:background">@drawable/bg_header</item> -->
		<!--<item name="android:background">@android:color/transparent</item>-->
		<item name="android:displayOptions">useLogo|showHome|showCustom|homeAsUp</item>
		<item name="android:customNavigationLayout">@layout/custom_view</item>
		<!--<item name="android:icon">@android:color/transparent</item>-->
		<!-- <item name="background">@drawable/bg_header</item> -->
		<!--<item name="background">@android:color/transparent</item>-->
		<item name="displayOptions">useLogo|showHome|showCustom|homeAsUp</item>
		<!--<item name="icon">@android:color/transparent</item>-->
		<item name="customNavigationLayout">@layout/custom_view</item>
	</style>

	<style name="Cyan_Button_Style">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:background">@color/selector_btn_cyan_grey</item>
		<item name="android:layout_marginLeft">@dimen/common_margin</item>
		<item name="android:layout_marginRight">@dimen/common_margin</item>
		<item name="android:layout_marginBottom">@dimen/common_margin</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/common_button_height</item>
	</style>

	<style name="SwitchCompat">
		<item name="track">@drawable/switch_track_holo_light</item>
		<item name="thumb">@drawable/switch_inner_holo_light</item>
		<item name="textOn">@string/general_on</item>
		<item name="textOff">@string/general_off</item>
		<item name="thumbTextPadding">12dip</item>
		<item name="switchMinWidth">96dip</item>
		<item name="switchPadding">16dip</item>
		<item name="switchTextAppearance">@style/TextAppearance</item>
	</style>

	<style name="Menu_Item_Style">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Menu_Item_Container_Style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
	</style>

	<style name="Menu_Item_Text_Style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
</resources>
