<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<TextView
			android:id="@+id/tv_current_location"
			android:maxLines="1"
			android:minLines="1"
			android:background="@drawable/selector_ics_text_field"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_height="wrap_content"
			android:lines="1" android:gravity="center_vertical"
			android:hint="@string/hint_search_places" android:layout_toLeftOf="@+id/btn_location_tracking"
			android:layout_centerVertical="true"
			android:layout_width="match_parent"/>

	<schedule.mock.views.AnimiImageView
			android:id="@+id/btn_location_tracking"
			android:layout_centerInParent="true"
			android:layout_centerVertical="true"
			android:src="@drawable/anim_radar"
			android:layout_alignParentRight="true"
			android:background="@android:color/transparent"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>
</RelativeLayout>